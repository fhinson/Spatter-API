<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>Team1 name</th>
      <th>Team2 name</th>
      <th>Team1 city</th>
      <th>Team2 city</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.team1_name %></td>
        <td><%= game.team2_name %></td>
        <td><%= game.team1_city %></td>
        <td><%= game.team2_city %></td>
        <td><%= game.date %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

